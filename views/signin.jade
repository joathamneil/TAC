  br
  br
  br
  br
  div(class=row)
    div(class="col-md-offset-4 col-md-4")
      div(class="panel panel-default")
        div(class="panel-body")
          center
            p
              h3 Login to Tanay Adventure Camp
          form(action="/login", method="post")
            div(class="form-group")
              div(class="input-group input-group-xs")
                span(class='input-group-addon')
                  span(class='glyphicon glyphicon-user')              
                input(type="text", name="username", class="form-control" id="inputUsername" placeholder="Enter username")
            div(class="form-group")
              div(class="input-group input-group-xs")
                span(class="input-group-addon")
                  span(class="glyphicon glyphicon-lock")
                input(type="password", name="password", class="form-control" id="inputPassword" placeholder="Enter password")
            button(type="submit", class="btn btn-default btn-block") Login
            div(class="fb-login-button", data-max-rows="1", data-size="icon", data-show-faces="false", data-auto-logout-link="false")
        div(class="panel-footer")
          center
            p New to Tanay Adventure Camp? 
              a(href="/register")
                u Signup
